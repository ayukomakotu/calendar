<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: '前月'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= start_date.year %>年 <%= t('date.month_names')[start_date.month] %> </span>
    <%= link_to t('simple_calendar.next', default: '次月'), calendar.url_for_next_view %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th width="50">日付</th>
        <% cars.each  do |car| %>
          <th colspan="2"><%= car %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <% week.each do |day| %>
          
          <tr>
            <% 7.times do |n| %>   <!-- 曜日日付を列で表示するため  -->
              <% if n == 0 %>  <!-- 曜日日付を列で表示するため  -->
                <!-- 前月翌月を非表示にする -->
                <% if calendar.td_classes_for(day).include?("prev-month") || 
                          calendar.td_classes_for(day).include?("next-month")%>
                  <% break %>
                <% end %>
                
                <% if holiday_check(day) %> <!-- 祝日判定 -->
                  <!-- htmlの要素を生成する classにholidayを追加 -->
                  <%= content_tag :td, class: [calendar.td_classes_for(day), "holiday"] do %>
                    <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                      <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
                    <% else %>
                      <% passed_block.call day, sorted_events.fetch(day, []) %>
                    <% end %>
                  <% end %>
                <% else %>
                  <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                    <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                      <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
                    <% else %>
                      <% passed_block.call day, sorted_events.fetch(day, []) %>
                    <% end %>
                  <% end %>
                <% end %>
              <% else %>
                <td></td>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
